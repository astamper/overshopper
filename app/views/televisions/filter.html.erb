 <style type="text/css">
    #sidebottombutton {
      position: absolute;
      bottom:0px;
      width: 100%;
      height: 50px;
      background: green;
      padding-top: 10px;
    }
    h3 {
      margin-top: 0px;
    }
  </style>

<div class="col-sm-3 hidden-xs">
  <%= render 'televisions/navigation/sidebar' %>
</div>

 <div class="container">
<div class="col-sm-9">
  <%= form_for_filterrific @filterrific do |f| %>
  <div class="slick-slider">
    <div class="item"><%= render 'televisions/filter/tvprice' %></div>
    <div class="item"><%= render 'televisions/filter/tvresolution' %></div>
    <div class="item"><%= render 'televisions/filter/tvsize' %></div>
    <div class="item"><%= render 'televisions/filter/tvbrand' %></div>
  </div>
  <% end %>
</div>
</div>
<nav class="navbar-fixed-bottom visible-xs">
  <a href="/tv-result">
    <div id="sidebottombutton">
      <h3 class="text-center">
        <font color="white">
          <div id="results">
            <%= render(
              partial: 'televisions/navigation/modelcount',
              locals: { televisions: @televisions }
              ) %>
            </div>
          </font>
        </h3>
      </div>
    </a>
  </nav>

  <script type="text/javascript">
    $(document).ready(function() {
     $('.slick-slider').slick({
       dots: false,
       accessibility: false,
       draggable: false,
       arrows:false,
       fade: true,
       speed: 1,
       responsive: [
        {
          breakpoint: 768,
          settings: {
            fade: false,
            speed: 300,
            draggable: true,
          }
        }
      ]
     });
   });

    $(".menu a").click(function(){
        slidename = $(this).attr('href');
        if(slidename == "#name") {slide = 1;}
        else if(slidename == "#resolution") {slide = 2;}
        else if(slidename == "#size") {slide = 3;}
        else if(slidename == "#brand") {slide = 4;}
        else {slide = 1;}
        $( '.slick-slider' ).slick('slickGoTo', slide );

    });


  </script>



