<div class="page-header" style="margin-bottom: 70px;">
  <div class="pull-right">
    <%= link_to 'Home', root_path, :style => 'display: inline-block; margin-top: 25px;' %>
  </div>
  <h1 class="chardin_box" data-intro="This is a demo for filterrific. Filter and sort the list of students. Click anywhere to remove the overlay." data-position="right">
    Students
  </h1>

</div>
<div class="well">
  <%= form_for_filterrific @filterrific do |f| %>
  <div class="row">
    <div class="col-md-3">
      <div class="form-group chardin_box" data-intro="Search by first name, last name, or email." data-position="top">
        <label>Search</label>
        <%= f.text_field(:search_query,
          class: 'filterrific-periodically-observed form-control'
            )%>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-group chardin_box" data-intro="Filter by country." data-position="top">
            <label>Country</label>
            <%= f.select(:with_country_id, @filterrific.select_options[:with_country_id], {}, { :class => 'form-control' })%>
          </div>
        </div>
        <div class="col-md-2">
          <div class="form-group chardin_box" data-intro="Filter by registration date." data-position="top">
            <label>Registered after</label>
            <%= f.text_field(:with_created_at_gte, class: 'js-datepicker form-control') %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group chardin_box" data-intro="Change the sorting." data-position="top">
            <label>Sorted by</label>
            <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by], {}, { :class => 'form-control' }) %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div id="results">
     <%= render(
        partial: 'students/list',
        locals: { students: @students }
        ) %>
      </div>
      <script>
        $('.js-datepicker').datepicker();
      </script>
